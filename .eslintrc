{
  "ecmaFeatures": {
    "jsx": true,
    "arrowFunctions": true,
    "blockBindings": true,
    "modules": true,
    "classes": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "eqeqeq": [2, "smart"],
    "curly": 2,
    "quotes": [2, "double", "avoid-escape"],
    "block-scoped-var": 2,
    "no-else-return": 2,
    "no-self-compare": 2,
    "no-void": 2,
    "no-warning-comments": 1,
    "no-mixed-requires": [1, true],
    "no-sync": 1,
    "brace-style": 2,
    "comma-style": 2,
    "no-lonely-if": 2,
    "no-multiple-empty-lines": 2,
    "no-nested-ternary": 2,
    "no-ternary": 2,
    "no-underscore-dangle": 0,
    "padded-blocks": [2, "never"],
    "quote-props": [2, "as-needed"],
    "space-before-function-paren": [2, "never"],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-in-parens": [2, "never"],
    "spaced-comment": 2,
    "jsx-quotes": [2, "prefer-single"]
  }
}
